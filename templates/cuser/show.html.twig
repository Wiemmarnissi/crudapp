{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Motpasse</th>
                <td>{{ user.motpasse }}</td>
            </tr>
        </tbody>
    </table>

    <!-- Bouton "Back to list" -->
    <a href="{{ path('app_cuser_index') }}" class="btn btn-secondary">Back to list</a>

    <!-- Formulaire de suppression avec bouton "Delete" -->
    {{ include('cuser/_delete_form.html.twig') }}
{% endblock %}
