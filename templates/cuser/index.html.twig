{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <h1>Users</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Motpasse</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.motpasse }}</td>
                <td>
                    <!-- Bouton "Show" -->
                    <a href="{{ path('app_cuser_show', {'id': user.id}) }}" class="btn btn-info btn-sm">Show</a>
                    <!-- Bouton "Edit" -->
                    <a href="{{ path('app_cuser_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_cuser_new') }}" class="btn btn-success">Create new</a>
{% endblock %}
